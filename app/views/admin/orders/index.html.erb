<div class = "container">
    <div class = "row">
        <div class = "col-md-6 offset-md-2">
            <%= render "admin/items/search", items:@items %>
            <table>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
                <% @orders.each do |order| %>
                <tr>
                    <td>
                    <%= link_to admin_order_path(order.id) do %>
                        <%= order.created_at %>
                    <% end %></td>
                    <td><%= order.end_user.full_name %></td>
                    <td>
                    <% sum = 0%>
                    <% order.order_details.each do |f| %>
                        <% sum += f.amount%>
                    <% end %>
                    <%= sum %>
                    </td>
                    <td><%= order.order_status_i18n %></td>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>