<%= render "admin/items/search", items:@items %>

<h1>ジャンル一覧・追加</h1>

<%= form_for @genre, url: admin_genres_path do |f| %>
    
    <table>
        <td>
        ジャンル
        <%= f.text_field :genre_name %>
        有効
        <%= f.radio_button :is_effective, :ture %>
        無効
        <%= f.radio_button :is_effective, :false %>
        <%= f.submit '追加'%>
        </td>
    </table>
<% end %>

<table>
    <tr>
        <th >ジャンル</th>
        <th >状態</th>
        <th ></th>
    <% @genres.each do |genre| %>
    <tr>
        <td>
            <%= genre.genre_name%>
        </td>
        <% if genre.is_effective == false%>
        <td>
            無効
        </td>
        <% else %>
        <td>
            有効
        </td>
        <% end %>
        <td>
        <%= link_to "編集する", edit_admin_genre_path(genre.id)%>
        </td>
</tr>
    <% end %> 

</table>