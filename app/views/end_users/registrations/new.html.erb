<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_users/shared/error_messages", resource: resource %>

  <div class="form-group">
      <div class="field">
        <%= f.label:名前（姓）, class: "float-left" %><br />
        <%= f.text_field :last_name, autofocus: true, class: "col-lg-offset-3 form-control form-control-lg w-100" %>
      </div>

      <div class="field">
        <%= f.label :名前（名）, class: "float-left" %><br />
        <%= f.text_field :first_name, class: "col-auto form-control form-control-lg w-100" %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :名前（セイ）, class: "float-left" %><br />
        <%= f.text_field :last_name_kana, class: "col-auto form-control form-control-lg w-100" %>
      </div>
      <div class="field">
        <%= f.label :名前（メイ）, class: "float-left" %><br />
        <%= f.text_field :first_name_kana, class: "col-auto form-control form-control-lg w-100" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフン無しで入力して下さい） %><br />
      <%= f.text_field :postcode, class: "col-auto form-control form-control-lg w-100" %>
    </div>

     <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :street_address, class: "col-auto form-control form-control-lg w-100" %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフン無しで入力して下さい） %><br />
      <%= f.text_field :phone_number, class: "col-auto form-control form-control-lg w-100" %>
    </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "end_users/shared/links" %>
