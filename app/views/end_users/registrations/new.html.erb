<div class="signup-box">
  <h2 class="enduser-signup">会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%
=begin%>
 <div class="enduser-signup-form">
    <%= render "end_users/shared/error_messages", resource: resource %>
  </div> 
<%
=end%>

    <%
=begin%>
 <div class="enduser-signup-form">
      </div> 
<%
=end%>
        <div class="enduser-signup-form">
          <%= f.label:名前（姓名）, class: "float-left" %><br />
          <%= f.text_field :last_name, autofocus: true, class: "col-lg-offset-3 form-control form-control-lg w-50", placeholder: "姓",class:"name-column-left"%>
          <%= f.text_field :first_name, class: "col-auto form-control form-control-lg w-50", placeholder: "名" ,class:"name-column-right"%>
        </div>

      <%
=begin%>
 <div class="enduser-signup-form">
      </div> 
<%
=end%>
        <div class="enduser-signup-form">
          <%= f.label :名前（セイ）, class: "float-left" %><br />
          <%= f.text_field :last_name_kana, class: "col-auto form-control form-control-lg w-100", placeholder: "姓(カタカナ)",class:"name-column-left" %>
          <%= f.text_field :first_name_kana, class: "col-auto form-control form-control-lg w-100", placeholder: "名(カタカナ)",class:"name-column-right" %>
        </div>

      <div class="enduser-signup-form">
        <%= f.label :郵便番号（ハイフン無しで入力して下さい） %><br />
        <%= f.text_field :postcode, class: "col-auto form-control form-control-lg w-100" %>
      </div>

      <div class="enduser-signup-form">
        <%= f.label :住所 %><br />
        <%= f.text_field :street_address, class: "col-auto form-control form-control-lg w-100" %>
      </div>

      <div class="enduser-signup-form">
        <%= f.label :電話番号（ハイフン無しで入力して下さい） %><br />
        <%= f.text_field :phone_number, class: "col-auto form-control form-control-lg w-100" %>
      </div>

    <div class="enduser-signup-form">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-auto form-control form-control-lg w-100" %>
    </div>

    <div class="enduser-signup-form">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %>文字以内)
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "col-auto form-control form-control-lg w-100" %>
    </div>

    <div class="enduser-signup-form">
      <%= f.label :パスワード確認用 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-auto form-control form-control-lg w-100" %>
    </div>

    <div class="box-signup-button">
      <%= f.submit "登録" %>
      </div>
    
  <% end %>

  
</div>
