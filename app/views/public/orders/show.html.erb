<p>注文履歴詳細</p>

<p>注文情報</p>
<table>
    <tr>
        <td>注文日</td>
        <td><%= @order.created_at %></td>
    </tr>
    <tr>
        <td>配送先</td>
        <td><%= @order.postcode %><br><%= @order.street_address %><br><%= @order.name %></td>
    </tr>
    <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
        <td>ステータス</td>
        <td><%= @order.order_status_i18n %></td>
    </tr>
</table>

<p>請求情報</p>
<table>
    <tr>
        <td>商品合計</td>
        <td><%= (@order.billing_amount.to_i)-(@order.postage.to_i) %></td>
    </tr>
    <tr>
        <td>配送料</td>
        <td><%= @order.postage %></td>
    </tr>
    <tr>
        <td>ご請求額</td>
        <td><%= @order.billing_amount %></td>
    </tr>
</table>

<p>注文内容</p>
<table>
    <th>
        <td>商品</td>
        <td>単価(税込)</td>
        <td>個数</td>
        <td>小計</td>
    </th>
    <% @order.order_details.each do |order_detail| %>
    <tr>
        <td></td>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.tax_price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.subtotal %></td>
    </tr>
    <% end %>
</table>